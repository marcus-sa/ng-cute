{
  "version": "0.0.1",
  "description": "Angular renderer for NodeGui",
  "license": "MIT",
  "scripts": {
    "postinstall": "ngc -p ./angular-metadata.tsconfig.json",
    "install:ci": "yarn install --frozen-lockfile",
    "build": "bazel build //packages/...",
    "build:watch": "ibazel build //packages/...",
    "bazel:format": "find . -type f \\( -name \"*.bzl\" -or -name WORKSPACE -or -name BUILD -or -name BUILD.bazel \\) ! -path \"*/node_modules/*\" | xargs buildifier -v --warnings=attr-cfg,attr-license,attr-non-empty,attr-output-default,attr-single-file,constant-glob,ctx-args,depset-iteration,depset-union,dict-concatenation,duplicated-name,filetype,git-repository,http-archive,integer-division,load,load-on-top,native-build,native-package,output-group,package-name,package-on-top,positional-args,redefined-variable,repository-name,same-origin-load,string-iteration,unused-variable",
    "bazel:lint": "yarn bazel:format --lint=warn",
    "bazel:lint-fix": "yarn bazel:format --lint=fix",
    "build:ngc": "ngc -p packages/tsconfig-ngc-build.json && cp -r packages/. dist/",
    "build:ngc:watch": "ngc -p packages/tsconfig-ngc-build.json -w && cp -r packages/. dist/",
    "test": "qode node_modules/.bin/jest",
    "test:ci": "yarn test --ci",
    "lint": "yarn bazel:lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn bazel:lint-fix && git add"
    }
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/architect": "0.803.4",
    "@angular-devkit/build-angular": "0.803.4",
    "@angular-devkit/build-webpack": "0.803.4",
    "@angular-devkit/core": "8.3.4",
    "@angular-devkit/schematics": "8.3.4",
    "@angular/animations": "8.2.6",
    "@angular/bazel": "9.0.0-next.6",
    "@angular/cli": "8.3.4",
    "@angular/common": "8.2.6",
    "@angular/compiler": "8.2.6",
    "@angular/compiler-cli": "8.2.6",
    "@angular/core": "8.2.6",
    "@angular/platform-browser": "8.2.6",
    "@angular/platform-browser-dynamic": "8.2.6",
    "@angular/platform-server": "8.2.6",
    "@bazel/bazel": "0.29.0",
    "@bazel/buildifier": "0.28.0",
    "@bazel/hide-bazel-files": "0.37.0",
    "@bazel/ibazel": "0.10.3",
    "@bazel/typescript": "0.37.0",
    "@ngtools/webpack": "8.3.4",
    "@nodegui/nodegui": "0.1.9",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.4",
    "@types/webpack": "4.39.1",
    "change-case": "3.1.0",
    "circular-dependency-plugin": "5.2.0",
    "copy-webpack-plugin": "5.0.4",
    "fork-ts-checker-webpack-plugin": "1.5.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "jest-preset-angular": "7.1.1",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "raw-loader": "3.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.3",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslib": "1.10.0",
    "typescript": "3.5.3",
    "webpack": "4.40.1",
    "webpack-dev-server": "3.8.0",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2",
    "zone.js": "0.10.2"
  }
}
