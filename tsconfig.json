{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "declaration": true,
    "types": ["node"],
    "paths": {
      "@ng-cute/core": ["./packages/core/src/index.ts"],
      "@ng-cute/core/*": ["./packages/core/*/index.ts"],
      "@ng-cute/*": ["./packages/*/src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
   ]
}
