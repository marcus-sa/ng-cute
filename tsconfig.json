{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "zone.js", "reflect-metadata"],
    "paths": {
      "@ng-qt/*": ["./packages/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "dist", "node_modules", "bazel-*"]
}
