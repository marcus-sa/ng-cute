{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "sourceMap": false,
    "declaration": false,
    "types": ["jest", "node", "zone.js"],
    "paths": {
      "@ng-qt/core/*": ["./packages/core/*/index.ts"],
      "@ng-qt/*": ["./packages/*/src/index.ts"]
    }
  },
  "include": ["**/*.d.ts"],
  "exclude": ["node_modules"]
}
