{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true,
    "types": ["node", "zone.js"],
    "paths": {
      "@ng-qt/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules", "bazel-*"]
}
